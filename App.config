<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
    </configSections>
    <connectionStrings>
        <add name="operion.Properties.Settings.TicariOtomasyonConnectionString"
            connectionString="Data Source=Data\TicariOtomasyon.db;Mode=ReadWriteCreate;Cache=Shared;"
            providerName="Microsoft.Data.Sqlite" />
    </connectionStrings>
    
    <!-- AI Entegrasyon Ayarları -->
    <appSettings>
        <!-- AI Sağlayıcı Yapılandırması - Gemini API -->
        <add key="AI_PROVIDER" value="Gemini" />
        <!-- Gemini API endpoint - model adı endpoint'e dahil -->
        <add key="AI_ENDPOINT" value="https://generativelanguage.googleapis.com/v1beta/models/gemini-flash-latest:generateContent" />
        <!-- API Anahtarı - ENV: prefix ile çevre değişkeninden okunabilir -->
        <add key="AI_API_KEY" value="ENV:GEMINI_API_KEY" />
        <!-- Model seçimi (endpoint'te belirtilir, burada referans için) -->
        <add key="AI_MODEL" value="gemini-flash-latest" />
        <!-- Maksimum token sayısı -->
        <add key="AI_MAX_TOKENS" value="2000" />
        
        <!-- Zaman Aşımı ve Yeniden Deneme -->
        <add key="AI_TIMEOUT_MS" value="30000" />
        <add key="AI_RETRY_COUNT" value="3" />
        
        <!-- Rate Limiting (Hız Sınırlama) -->
        <add key="AI_RATE_LIMIT_GLOBAL" value="30" />
        <!-- Dakikada maksimum global istek -->
        <add key="AI_RATE_LIMIT_PER_USER" value="10" />
        <!-- Kullanıcı başına dakikada maksimum istek -->
        
        <!-- Loglama Ayarları -->
        <add key="AI_LOGGING_ENABLED" value="true" />
        <add key="AI_LOG_DIRECTORY" value="Logs\AI" />
        
        <!-- Özellik Anahtarları (Feature Flags) -->
        <add key="FEATURE_AI_REPORT_SUMMARY" value="true" />
        <add key="FEATURE_AI_EMAIL_ASSISTANT" value="true" />
        
        <!-- PII Güvenlik Ayarları -->
        <add key="AI_MASK_CUSTOMER_NAMES" value="true" />
        <add key="AI_MASK_PERSONAL_DATA" value="true" />
        <add key="AI_DATA_MINIMIZATION" value="true" />
        
        <!-- Cache Ayarları -->
        <add key="AI_CACHE_ENABLED" value="true" />
        <add key="AI_CACHE_DURATION_MINUTES" value="15" />
        
        <!-- SMTP E-posta Ayarları -->
        <add key="SMTP_HOST" value="smtp.live.com" />
        <add key="SMTP_PORT" value="587" />
        <add key="SMTP_ENABLE_SSL" value="true" />
        <add key="SMTP_TIMEOUT_MS" value="50000" />
        <add key="SMTP_FROM_EMAIL" value="eposta@hotmail.com" />
        <add key="SMTP_FROM_NAME" value="operion Ticari Otomasyon" />
        <!-- SMTP şifre için ENV: prefix kullanılabilir veya doğrudan değer -->
        <add key="SMTP_PASSWORD" value="ENV:SMTP_PASSWORD" />
    </appSettings>
    
    <!-- .NET 10 için startup kısmı gerekli değil, ancak uyumluluk için bırakılabilir -->
</configuration>

